<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
        <RootNamespace>Demo</RootNamespace>
        <LangVersion>9</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\OpenTKGameEngine\OpenTKGameEngine.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="shaders\triangle.frag" />
      <None Remove="shaders\triangle.vert" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="BulletSharp" Version="0.11.1" />
      <PackageReference Include="CSCore" Version="1.2.1.2" />
      <PackageReference Include="OpenTK" Version="4.5.0" />
      <PackageReference Include="SixLabors.ImageSharp" Version="1.0.3" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="shaders\demo1.frag" />
      <None Remove="shaders\demo1.vert" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="Assets\Shaders\demo1.frag">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Include="Assets\Shaders\demo1.vert">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <None Remove="Resources\Textures\container.png" />
      <Content Include="Assets\Textures\container.png">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <None Remove="Resources\icon.png" />
    </ItemGroup>

</Project>
