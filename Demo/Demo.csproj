        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <None Remove="Assets\Models\deformedcube.obj" />
      <Content Include="Assets\Models\deformedcube.obj">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Assets\Sounds" />
    </ItemGroup>

</Project>
